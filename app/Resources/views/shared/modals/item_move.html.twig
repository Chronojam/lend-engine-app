{% extends 'shared/modal.html.twig' %}
{% trans_default_domain 'member_site' %}

{% block subTitle %}
Move or service item:
{% endblock %}

{% block title %}
    <strong>{{ title }}</strong>
{% endblock %}

{% block body %}

    <div class="alert alert-warning">
        With the recent release of maintenance plans, "assign to" has been replaced with "create a maintenance task".<br>
        You'll need to have created one or more maintenance plans first.<br>
        If the plan has a provider, they will be emailed when maintenance is scheduled.
    </div>

    {{ form_start(form) }}
    {{ form_errors(form) }}
    {% if help is defined %}
        <span class="help">{{ help }}</span>
    {% endif %}

    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.location) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.maintenancePlan) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.notes) }}
        </div>
    </div>

    <input type="hidden" name="form_action" value="item_move">
    <input type="hidden" name="idSet" value="{{ idSet }}">

    {{ form_end(form) }}

{% endblock %}

{% block footer %}

    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
    <button class="modal-submit btn btn-success pull-right">Move / service item</button>

{% endblock %}