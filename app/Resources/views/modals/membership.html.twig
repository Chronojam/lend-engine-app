{# app/Resources/views/modals/membership.html.twig #}
{% extends 'modal.html.twig' %}

{% block modalTitle %}New membership for {{ contact.name }}{% endblock %}
{% block modalSubTitle %}{% endblock %}

{% block modalBody %}

    {% if contact.activeMembership %}
        <div class="alert alert-danger">
            This contact already has an active membership. Please cancel it before adding a new one.
        </div>
    {% else %}

        {{ form_start(form, { 'attr' : { 'class': 'payment-form', 'id' : "paymentForm" } }) }}

        {{ form_errors(form) }}
        {% if help is defined %}
            <span class="help">{{ help }}</span>
        {% endif %}

        <input type="hidden" name="contactId" id="contactId" value="{{ contact.id }}">
        <input type="hidden" name="contactEmail" id="contactEmail" class="contact-email" value="{{ contact.email }}">

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.membershipType) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.price) }}
            </div>
        </div>

        <div id="paymentBlock" style="display:none">
            {{ include('cores/payment_core.html.twig') }}
        </div>

        {{ form_end(form) }}

        <div class="help-block">
            If you need to create a membership retrospectively, you can edit the start and end dates once the membership has been created.
        </div>

    {% endif %}

{% endblock %}

{% block modalFooter %}
    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>

{% if contact.activeMembership %}

{% else %}
    <button class="payment-submit btn btn-success">Create membership</button>
{% endif %}

    <script>
        $(document).ready(function () {
            $(".modal-body").on("change", "#membership_membershipType", function () {
                setPaymentAmount();
            });
        });

        function setPaymentAmount() {
            var membershipTypePrices = [];
            {% for type in membershipTypePrices %}
            membershipTypePrices[{{ type.id }}] = {{ type.price }};
            {% endfor %}
            var membershipTypeId = $("#membership_membershipType").val();
            $("#membership_price").val(membershipTypePrices[membershipTypeId].toFixed(2));
            $(".payment-amount").val(membershipTypePrices[membershipTypeId].toFixed(2));
            if (membershipTypePrices[membershipTypeId] > 0) {
                $("#paymentBlock").fadeIn();
            } else {
                $("#paymentBlock").fadeOut();
            }
        }

        setPaymentAmount();
    </script>
{% endblock %}

