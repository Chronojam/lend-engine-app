<html>
<head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
{% for category in data %}
    <div style="padding: 20px;">
        <h3>{{ category.name }}</h3>
        <div id="items" class="row">
            {% if category.products|length > 0 %}
            {% for product in category.products %}
                <div class="col-xs-{{ colSize }}">
                    <div class="row" style="padding-bottom: 10px;">
                        <div class="col-xs-4" style="padding-bottom: 10px;">
                            {% if product.imageName %}
                                <div class="img-responsive">
                                    <img src="{{ tenantInformation.s3Bucket }}{{ tenantInformation.schema }}/large/{{ product.imageName }}" alt="" class="img-responsive image1">
                                </div>
                            {% else %}
                                <div class="img-responsive">
                                    <img src="//{{ tenantInformation.accountDomain }}/images/no_image.png" alt="" class="img-responsive image1">
                                </div>
                            {% endif %}
                        </div>
                        <div class="col-xs-8">
                            <h5>{{ product.name }}</h5>
                            <div>Code: {{ product.sku }}</div>
                            <div>{{ product.description }}</div>
                            {% if product.componentInformation %}
                            <div><br>Contains:<br>{{ product.componentInformation }}</div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
            {% else %}
                <div class="col-xs-6">
                    No items in this category
                </div>
            {% endif %}
        </div>
    </div>
{% endfor %}
</body>
</html>
