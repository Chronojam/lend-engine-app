{# app/Resources/views/public/registration_welcome.html.twig #}

{% extends 'public/themes/loader.html.twig' %}
{% trans_default_domain 'member_site' %}

{% block search %}{% endblock %}

{% block accountNav %}
    {{ include('public/partials/account_nav.html.twig') }}
{% endblock %}

{% block body %}
    <div id="registration-welcome">
        {% if tenantInformation.getSiteWelcomeUser %}
            {{ tenantInformation.getSiteWelcomeUser|raw }}
        {% else %}
            <h2>Welcome!</h2>
            <p>
                Your email address has now been confirmed. Welcome to {{ tenantInformation.companyName }}!
            </p>
        {% endif %}
    </div>
{% endblock %}