{% extends('public/base.html.twig') %}
{% trans_default_domain 'member_site' %}

{% block theme %}
    <div id="all">

        <header>

            <div class="container">
                <div class="row">

                    <div id="nav-org-name" class="col-md-4 hidden-xs">
                        {% include('public/themes/widgets/org_name.html.twig') %}
                    </div>

                    <div id="nav-menu" class="col-md-8 col-xs-12">

                        {#-- button to toggle the navigation block on the left --#}
                        <div class="navbar-buttons pull-right">
                            <button type="button" class="navbar-toggle btn-template-main" data-toggle="collapse" data-target="#leftNavigation">
                                <span class="sr-only">Toggle navigation</span>
                                <i class="fa fa-align-justify"></i>
                            </button>
                        </div>

                        <div class="pull-right">
                            {% include('public/themes/widgets/site_menu.html.twig') %}
                        </div>

                    </div>

                </div>
            </div>

        </header>

        <div id="content" style="margin-bottom: 100px;">

            <div class="container">

                {% if is_granted('ROLE_ADMIN') %}
                    {% include('public/themes/widgets/admin_tools.html.twig') %}
                {% else %}
                <div style="margin-bottom: 20px">
                    {% include('public/themes/widgets/search.html.twig') %}
                </div>
                {% endif %}

                <div class="row">

                    <div class="col-sm-3" role="navigation" id="leftnavbar">
                        <div class="navbar-collapse collapse" id="leftNavigation">
                            {% include('public/themes/widgets/pages_menu_stacked.html.twig') %}
                            <hr size="1" noshade>
                            {% include('public/themes/widgets/items_menu_stacked.html.twig') %}
                        </div>
                        <br>
                    </div>

                    <div class="col-sm-9" id="page-body">

                        {% include('public/themes/widgets/alerts.html.twig') %}
                        {% include('public/themes/widgets/account_menu.html.twig') %}

                        {#--- THIS IS THE SECTION THAT PULLS IN ACTUAL CONTENT ---#}
                        {% block body %}{% endblock %}

                    </div>

                </div>

            </div>

        </div>

        <br/>

        <footer id="footer">
            <div class="container">

                <div class="footer-div"></div>

                <div class="row footer-block" style="padding-bottom: 40px;">

                    <div class="col-sm-4">
                        {% include('public/themes/widgets/contact_info.html.twig') %}
                        <br><br>
                        {% trans %}public_footer.powered_by{% endtrans %}
                        <a href="http://www.lend-engine.com" target="_blank">The Lend Engine</a>
                    </div>

                    <div class="col-sm-4">
                        {% include('public/themes/widgets/languages.html.twig') %}
                        <br><br>
                        {% include('public/themes/widgets/user.html.twig') %}
                    </div>

                    <div class="col-sm-4">
                        {#menu in here maybe#}
                    </div>

                </div>
            </div>
        </footer>

    </div>
{% endblock %}